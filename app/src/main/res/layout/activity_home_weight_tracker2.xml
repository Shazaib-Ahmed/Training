<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".weightTracker2.HomeWeightTracker2">

    <RelativeLayout
        android:id="@+id/overview_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="28dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/overview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_normal"
            android:includeFontPadding="false"
            android:text="Overview"
            android:textColor="@color/weightTracker2ColorOne"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/overview_tv"
            android:layout_marginTop="-7dp"
            android:fontFamily="@font/poppins_normal"
            android:includeFontPadding="false"
            android:text="Home"
            android:textColor="@color/weightTracker2TextColorTwo"
            android:textSize="40sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/demo_photo"
            app:civ_border_color="@color/weightTracker2ColorOne"
            app:civ_border_width="0.5dp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overview_rl"
        android:layout_gravity="center"
        tools:itemCount="1"
        tools:listitem="@layout/slide_1_wt2" />

    <LinearLayout
        android:id="@+id/indicator_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_recycler_view"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="1dp"
            android:src="@drawable/ic_dot_wt2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="1dp"
            android:src="@drawable/ic_dot_2_wt2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="1dp"
            android:src="@drawable/ic_dot_2_wt2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="1dp"
            android:src="@drawable/ic_dot_2_wt2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="1dp"
            android:src="@drawable/ic_dot_2_wt2" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/progress_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/indicator_ll"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="15dp"
                android:fontFamily="@font/poppins_normal"
                android:includeFontPadding="false"
                android:text="Goal Progress"
                android:textColor="@color/weightTracker2TextColorTwo"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/edit_weight_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/ic_edit_btn_back">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_normal"
                    android:includeFontPadding="false"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_weight_rl"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/arc_progress_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/ic_ellipse_221">

                    <TextView
                        android:id="@+id/now_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_normal"
                        android:text="Now"
                        android:textColor="@color/weightTracker2TextColorOne"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/current_weight_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/now_tv"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_normal"
                        android:includeFontPadding="false"
                        android:text="74.5 Kg"
                        android:textColor="@color/weightTracker2ColorOne"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/current_weight_tv"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/dropped_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_normal"
                            android:text="Dropped - "
                            android:textColor="@color/weightTracker2TextColorOne"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/dropped_weight_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4Kg"
                            android:textColor="@color/weightTracker2TextColorOne" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/arc_progress_rl"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/enter_weight_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_normal"
                        android:gravity="center"
                        android:text="78"
                        android:textColor="@color/weightTracker2TextColorOne"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/goal_weight_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_normal"
                        android:gravity="center"
                        android:text="72"
                        android:textColor="@color/weightTracker2TextColorOne"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_card_view"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="15dp"
                android:fontFamily="@font/poppins_normal"
                android:text="Statistics"
                android:textColor="@color/weightTracker2TextColorTwo"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/week_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="15dp"
                android:background="@drawable/ic_edit_btn_back"
                android:padding="3dp">

                <Spinner
                    android:id="@+id/spinner_wt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:padding="0dp"
                    android:popupBackground="@color/weightTracker2ColorOne"
                    android:popupTheme="@style/Theme.AppCompat"
                    android:spinnerMode="dropdown" />
            </RelativeLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/MPLineChart"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/week_rl" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>