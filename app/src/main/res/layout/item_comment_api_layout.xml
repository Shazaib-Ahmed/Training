<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:background="@color/white"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/borderdesigncardview"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">
            <TextView
                android:id="@+id/postID_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Post ID : "
                android:textAlignment="textStart"
                />
            <TextView
                android:id="@+id/ID_comment"
                android:layout_below="@+id/postID_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="ID"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/name_comment"
                android:layout_below="@+id/ID_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Name"
                android:textAlignment="textStart"/>
            <TextView
                android:id="@+id/email_comment"
                android:layout_below="@+id/name_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Email"
                android:textAlignment="textStart"/>
            <TextView
                android:id="@+id/body_comment"
                android:layout_below="@+id/email_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Body"
                android:textAlignment="textStart"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>