<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".bloodSugarTracker.SplashScreenBloodSugarTracker">

    <LinearLayout
        android:id="@+id/blood_tracker_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50sp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/keep_track_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/proxima_nova_alt_light"
            android:text="Keep Track Of Your"
            android:textColor="@color/bloodTrackerColorOne"
            android:textSize="25sp"

            />

        <TextView
            android:id="@+id/blood_sugar_level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/keep_track_tv"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/proxima_nova_alt_light"
            android:text="Blood Sugar Level"
            android:textColor="@color/bloodTrackerColorOne"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blood_tracker_linear_layout"
        android:layout_margin="0sp"
        android:src="@drawable/ic_splash_blood_tracker" />

</RelativeLayout>