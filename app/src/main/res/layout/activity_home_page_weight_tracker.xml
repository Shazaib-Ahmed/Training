<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".weightTracker.HomePageWeightTracker"
    android:background="@drawable/ic_background_wt_one">
<LinearLayout
    android:id="@+id/home_page_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_normal"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90 Kg"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_normal"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_normal"
            android:textColor="@color/weightTrackerColorTwo"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_normal"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80 Kg"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_normal"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>

    <RelativeLayout
        android:id="@+id/input_weight_home_page_relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_page_linear_layout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_input_wt"
        android:padding="10sp"
        android:layout_margin="15sp"

        >

        <ImageView
            android:id="@+id/meter_wt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_weight_meter_wt"
            android:layout_alignParentTop="true"
            android:layout_margin="5sp"/>

        <TextView
            android:id="@+id/weight_wt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meter_wt"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_edittext_wt"
            android:fontFamily="@font/poppins_normal"
            android:text="86 KG"
            android:textSize="22sp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/weightTrackerColorOne"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>