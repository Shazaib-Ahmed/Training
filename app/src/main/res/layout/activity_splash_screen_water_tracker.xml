<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaterReminder.SplashScreen"
    android:background="#62cbff">
    <TextView
        android:id="@+id/splash_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Tracker"
        android:textSize="40dp"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        android:fontFamily="@font/poppins_normal"
        android:layout_centerInParent="true"
        android:layout_above="@+id/bodyWeightIv"/>
    <ImageView
        android:id="@+id/bodyWeightIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_body_weight"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>