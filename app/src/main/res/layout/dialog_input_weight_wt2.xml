<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="20sp"
    android:background="@color/white"
    android:layout_margin="25sp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="20sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp">

            <TextView
                android:id="@+id/weight_dialog_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_normal"
                android:padding="15sp"
                android:text="Weight"
                android:textAlignment="center"
                android:textColor="@color/weightTracker2ColorOne"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/dialog_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="10sp"
                android:src="@drawable/ic_baseline_cancel_24" />


            <LinearLayout
                android:id="@+id/input_weight_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weight_dialog_tv"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <EditText
                    android:id="@+id/input_weight_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45sp"
                    android:layout_marginEnd="0sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_normal"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/waterTrackerTextColor"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lb_kb_unit_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="45sp"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppins_normal"
                    android:padding="0sp"
                    android:text="kg"
                    android:textAlignment="center"
                    android:textColor="@color/weightTracker2ColorOne"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </LinearLayout>


            <TextView
                android:id="@+id/save_btn_wt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_weight_linear_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="25sp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="25sp"
                android:layout_marginBottom="25sp"
                android:background="@drawable/btn_weight_tracker_2"
                android:fontFamily="@font/poppins_normal"
                android:gravity="center"
                android:text="Save"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>