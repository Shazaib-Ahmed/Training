<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/weightTrackerColorOne">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/weight_input_design_wt"
        android:orientation="vertical"
        android:layout_margin="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_normal"
            android:text="Weight"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="5sp"
            android:textColor="@color/weightTrackerColorOne" />

        <EditText
            android:id="@+id/weight_current_wt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_normal"
            android:hint="Enter current weight"
            android:textAlignment="center"
            android:inputType="number"
            android:textSize="14sp"
            android:lines="1"
            android:layout_marginStart="18sp"
            android:layout_marginEnd="18sp"
            android:background="@drawable/edit_text_bg_selector_wt"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_cancel_wt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_normal"
                android:text="Cancel"
                android:textColor="@color/weightTrackerColorOne"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_margin="5sp"/>

            <TextView
                android:id="@+id/dialog_done_wt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_normal"
                android:gravity="center"
                android:text="Done"
                android:layout_margin="5sp"
                android:textColor="@color/weightTrackerColorOne"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>